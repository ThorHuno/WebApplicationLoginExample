@model WebApplicationLoginExample.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Auth/Views/Shared/_AuthLayout.cshtml";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { placeholder = "User", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
    </div>
    <input type="submit" value="LogIn" />
}
