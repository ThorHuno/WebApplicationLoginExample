@model WebApplicationLoginExample.ViewModels.UserInputViewModel
@{
    ViewData["Title"] = "Edit user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "UserManagement", new { id = ViewBag.Id }, FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { placeholder = "User", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Roles")
        @Html.DropDownListFor(m => m.RolesSelected, (ViewBag.Roles as List<WebApplicationLoginExample.ViewModels.RolesViewModel>).Select(item => new SelectListItem(item.Name, item.Name.ToString())), new { @class = "form-control", multiple = true })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsEnabled)
        @Html.CheckBoxFor(m => m.IsEnabled)
    </div>
    <input type="submit" value="Update" />
}
