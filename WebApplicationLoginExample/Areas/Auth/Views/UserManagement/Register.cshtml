@model WebApplicationLoginExample.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Auth/Views/Shared/_AuthLayout.cshtml";
}

@using (Html.BeginForm("Signup", "UserManagement", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { placeholder = "User", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Roles")
        @Html.DropDownListFor(m => m.RolesSelected, (ViewBag.Roles as List<WebApplicationLoginExample.ViewModels.RolesViewModel>).Select(item => new SelectListItem(item.Name, item.Name.ToString())), new { @class = "form-control", multiple = true })
    </div>
    <input type="submit" value="Register" />
}
